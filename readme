#base
docker run -it --user=user --network=host ros_jazzy

#run and exit
docker run -it --user=user --network=host --ipc=host ros_jazzy <args>
docker run -it --user=user --network=host --ipc=host ros_jazzy ros2 topic list

#video
docker run -it --user=user --network=host -v /tmp/.X11-unix:/tmp.X11-unix:rw --env=DISPLAY --ipc=host ros_jazzy

#ros2 jazzy en docker
docker pull osrf/ros:jazzy-desktop
 

# create image
docker build -t ros2_jazzy .

#run
docker run -it --user=user --net=host --ipc=host -v /tmp/.X11-unix:/tmp.X11-unix:rw --env=DISPLAY ros_jazzy


docker run -it --user=user --net=host --ipc=host -v /home/ubuntu/docker/test_ws:/home/user/ros2_ws -v /tmp/.X11-unix:/tmp.X11-unix:rw --env=DISPLAY -v /dev:/dev --device-cgroup-rule='c 13:* rmw' --device-cgroup-rule='c 166:* rmw' --device-cgroup-rule='c 188:* rmw' -v /dev/bus/usb:/dev/bus/usb --device-cgroup-rule='c 189:* rmw' ros_jazzy

install docker: https://www.digitalocean.com/community/tutorials/how-to-install-and-use-docker-on-ubuntu-18-04

